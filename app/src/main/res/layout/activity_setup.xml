            <Button
                    android:layout_width="320dp"
                    android:layout_height="52dp" android:id="@+id/btn_metric"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/intro_btn_pt_style" app:layout_constraintHorizontal_bias="0.0"
                    android:text="METRIC" android:fontFamily="@font/gotham_medium"/>
            <Button
                    android:layout_width="320dp"
                    android:layout_height="52dp" android:id="@+id/btn_imperial"
                    android:background="@drawable/intro_btn_pt_style"
                    app:layout_constraintTop_toBottomOf="@+id/btn_metric"
                    android:layout_marginTop="20dp" android:text="IMPERIAL" android:fontFamily="@font/gotham_medium"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/cl_pageB"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/great_screen" android:id="@+id/page3"
                android:scaleType="centerCrop"
                android:visibility="gone"
        />
