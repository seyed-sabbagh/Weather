                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/hello_layout"
                android:id="@+id/iv_background"
                android:scaleType="centerCrop" tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"/>
        <EditText
                android:layout_width="320dp"
                android:layout_height="52dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/et_city"
                android:background="@drawable/intro_et_style" android:fontFamily="@font/gotham_medium"
                android:textAlignment="center" android:hint="Enter your city"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView4"
                android:layout_marginTop="60dp" app:layout_constraintHorizontal_bias="0.483"/>
        <Button
                android:text="Confirm"
                android:layout_width="320dp"
                android:layout_height="52dp" android:id="@+id/btn_confirm"
                android:background="@drawable/intro_btn_pt_style"
                android:fontFamily="@font/gotham_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/et_city"/>
        <Button
                android:text="Enable GPS"
                android:layout_width="320dp"
                android:layout_height="52dp" android:id="@+id/btn_gps"
                android:background="@drawable/intro_btn_pt_style" android:fontFamily="@font/gotham_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/textView6"/>
        <TextView
                android:text="OR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6"
                android:fontFamily="@font/gotham_medium" android:textSize="20sp"
                android:textColor="@color/colorWhite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/btn_confirm"
                android:layout_marginTop="25dp"/>
        <TextView
                android:text="Hello!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4"
                android:fontFamily="@font/gotham_bold" android:textSize="55sp"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="108dp" android:layout_marginStart="60dp"/>
        <TextView
                android:text="2021"
                android:layout_width="93dp"
                android:layout_height="20dp" android:id="@+id/textView5"
                android:textColor="@color/colorSetupGreen"
                android:fontFamily="@font/gotham_light"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="24dp" android:layout_marginStart="10dp"/>
        <TextView
                android:text="It's easy inc."
                android:layout_width="93dp"
                android:layout_height="20dp" android:id="@+id/textView2"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/gotham_light"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="36dp" android:layout_marginBottom="24dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cl_pageD"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
    >

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/great_screen"
                android:id="@+id/imageView5" android:scaleType="centerCrop"/>
        <TextView
                android:text="Great!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7"
                android:fontFamily="@font/gotham_bold" android:textSize="50sp"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="70dp" android:layout_marginStart="50dp"/>
        <TextView
                android:text="You're now all set up. You can always change preferences in Options"
                android:layout_width="254dp"
                android:layout_height="73dp" android:id="@+id/textView8"
                android:fontFamily="@font/gotham_light" android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView7"
                android:layout_marginTop="25dp" android:textColor="@color/colorWhite"
                android:layout_marginStart="50dp" android:lineSpacingExtra="5dp"/>
        <Button
                android:text="Start"
                android:layout_width="116dp"
                android:layout_height="54dp" android:id="@+id/btn_start"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                android:background="@drawable/intro_btn_pt_style" android:layout_marginStart="50dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bgrate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/cl_privacy">

        <TextView
                android:text="This app collects location data to detremine city to show forecast for even when the app is closed or not in use."
                android:layout_width="290dp"
                android:layout_height="118dp" android:id="@+id/textView19"
                android:fontFamily="@font/gotham_medium"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="25dp"
                android:lineSpacingExtra="9dp"
                app:layout_constraintTop_toBottomOf="@+id/textView15" android:layout_marginStart="30dp"
                android:paddingEnd="30dp"/>
        <TextView
                android:text="There's something you \nshould know.."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView15"
                android:fontFamily="@font/gotham_bold"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp" android:textColor="@color/colorWhite"
                android:layout_marginStart="30dp" android:lineSpacingExtra="9dp"/>
        <Button
                android:text="Fine"
                android:layout_width="0dp"
                android:layout_height="50dp" android:id="@+id/btn_fine"
                android:background="@drawable/intro_btn_pt_style"
                android:layout_marginTop="6dp" app:layout_constraintTop_toBottomOf="@+id/textView19"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="30dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>